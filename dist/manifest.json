{
    "manifest_version": 3,
    "name": "The AXIS Extension",
    "description": "Simplify and extend The Joint's electronic systems.",
    "homepage_url": "https://axis.praktiki.app",
    "version": "1.0",
    "version_name":"",
    "minimum_chrome_version": "114",
    "options_page": "markup/settings.html",
    "action": {
        "default_icon": "icons/app/32.png",
        "default_title": "The AXIS Extension"
    },
    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "css": ["styles/content.css"],
            "matches": [
                "https://axis.thejoint.com/*",
                "https://backoffice.thejoint.com/*"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
    {
      "resources": [ 
        "assets/*",
        "fonts/*",
        "icons/*",
        "markup/*",
        "scripts/*",
        "styles/*"
        ],
      "matches": [ 
        "https://axis.thejoint.com/*",
        "https://backoffice.thejoint.com/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "background":{
      "service_worker": "scripts/background.js"
  },
  "host_permissions": [
    "https://axis.thejoint.com/*",
    "https://backoffice.thejoint.com/*"
  ],
  "icons": {
    "16": "icons/app/16.png",
    "32": "icons/app/32.png",
    "48": "icons/app/48.png",
    "128": "icons/app/128.png"
  }
}